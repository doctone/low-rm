{
  "name": "low-rm",
  "version": "0.0.4",
  "licenses": [
    {
      "type": "MIT"
    }
  ],
  "description": "A Typescript-built custom database ORM for postgres built on top of node-pg",
  "main": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "validate": "pnpm run test && pnpm run lint",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "lint": "tsc",
    "release": "pnpm run test && pnpm run lint && pnpm run build && changeset publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pnpm run build"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "tsc --noEmit",
      "jest --findRelatedTests"
    ]
  },
  "keywords": [],
  "author": "Sam James",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.24.4",
    "@babel/preset-typescript": "^7.24.1",
    "@changesets/cli": "^2.27.1",
    "@types/jest": "^29.5.12",
    "@types/jest-when": "^3.5.5",
    "@types/node": "^20.12.5",
    "@types/pg": "^8.11.4",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-watch-select-projects": "^2.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "jest-when": "^3.6.0",
    "lint-staged": "^15.2.2",
    "npm-run-all": "^4.1.5",
    "tsup": "^8.0.2",
    "typescript": "^5.4.4"
  },
  "dependencies": {
    "pg": "^8.11.5"
  }
}
